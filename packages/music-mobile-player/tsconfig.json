{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "paths": {
      "app/*": ["./src/*"],
      // Remove these when no longer dependent on -client
      "live/*": ["./node_modules/@coliving/web/src/live/*"],
      "common/*": ["./node_modules/@coliving/web/src/common/*"],
      "components/*": ["./node_modules/@coliving/web/src/components/*"],
      "hooks/*": ["./node_modules/@coliving/web/src/hooks/*"],
      "pages/*": ["./node_modules/@coliving/web/src/pages/*"],
      "models/*": ["./node_modules/@coliving/web/src/models/*"],
      "services/*": ["./node_modules/@coliving/web/src/services/*"],
      "store/*": ["./node_modules/@coliving/web/src/store/*"],
      "utils/*": ["./node_modules/@coliving/web/src/utils/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    // Update these when no longer dependent on -client
    "strict": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "./android/*",
    "./web-app/*"
  ]
}